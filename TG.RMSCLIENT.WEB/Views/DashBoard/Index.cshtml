@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}
<script src="~/JavascriptFile/PageScript/BashBoard.js"></script>
<script src="~/JavascriptFile/Common/JQCommon.js"></script>
<style type="text/css">
        #mu-reservation {
        background-color: #fff;
        display: inline;
        float: left;
        padding: 100px 0;
        width: 100%;
        }

        #mu-reservation .mu-reservation-area .mu-reservation-content .mu-reservation-form button[type="submit"], button[type="button"] {
            border: none;
            margin-top: 20px;
            /*margin-left: 15px;*/
        }

        #mu-reservation .mu-reservation-area .mu-reservation-content {
            display: inline;
            float: left;
            margin-top: 0px;
            /*padding: 0 100px;*/
            width: 100%;
        }

            #mu-reservation .mu-reservation-area .mu-reservation-content .mu-reservation-form {
                margin-top: -40px;
                text-align: center;
                margin-top: 25px;
            }

        .row {
        /*margin-right: -15px;*/
        margin-left: -7%;
        /*padding-bottom: 25px;*/
        }

        .ui-jqgrid {
        position: relative;
        /*border: 1px solid #c1a35f;*/
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        border-radius: 0px;
        }

    /*.table-bordered > thead > tr > th,
    .table-bordered > tbody > tr > th,
    .table-bordered > tfoot > tr > th,
    .table-bordered > thead > tr > td,
    .table-bordered > tbody > tr > td,
