@model BGW.MODEL.FoodBank.FoodMenuModel

@{
    ViewBag.Title = "FoodMenu";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}
<script src="~/assets/js/jquery.min.js"></script>
<style type="text/css">
    #mu-reservation {
        background-color: #fff;
        display: inline;
        float: left;
        padding: 100px 0;
        width: 100%;
    }
    #mu-reservation .mu-reservation-area .mu-reservation-content .mu-reservation-form button[type="submit"], button[type="button"] {
        border: none;
        margin-top: 20px;
        margin-left: 15px;
    }
    
</style>
<section id="mu-reservation">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-reservation-area">
                    <div class="mu-title">
                        <span class="mu-subtitle">Make A</span>
                        <h2 style="color:black">Food Menu</h2>
                        <i class="fa fa-spoon"></i>
                        <span class="mu-title-bar"></span>
                    </div>
                    <div class="mu-reservation-content">
                        
                        <form class="mu-reservation-form">
                            <div class="row"> 
                                <div class="col-md-6">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <select class="form-control">
                                                <option value="0">--Select--</option>
                                                <option value="1 Person">1 Person</option>
                                                <option value="2 People">2 People</option>
                                                <option value="3 People">3 People</option>
                                                <option value="4 People">4 People</option>
                                                <option value="5 People">5 People</option>
                                                <option value="6 People">6 People</option>
                                                <option value="7 People">7 People</option>
                                                <option value="8 People">8 People</option>
                                                <option value="9 People">9 People</option>
                                                <option value="10 People">10 People</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Name" name="MName">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Price" name="Price">
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <select class="form-control">
                                                <option value="0">--Select Currency--</option>
                                                <option value="1">Doller</option>
                                                <option value="2">Taka</option>
                                                <option value="3">Pound</option>
                                                
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="col-md-6 form-group">
                                            <input type="checkbox" class="" name="Isbout"> <span style="color: #444"> About</span>
                                        </div>
                                        <div class="col-md-6 form-group">
                                            <input type="checkbox" class="" name="IsGallary"> <span style="color: #444"> Gallary</span>
                                        </div>

                                    </div> 
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <textarea class="form-control" cols="30" rows="8" placeholder="Your Message"></textarea>
                                        </div>
                                    </div>
                                </div>                               
                               

                                
                                <div class="col-md-6">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <img id="IMG" src="~/assets/img/gallery/big/3.jpg" width="400" height="300" style="border: thin solid #c1a35f;" />
                                        </div>
                                    </div>
                                   
                                    <div class="col-lg-12 col-md-12" style="padding:10px">
                                        <input type="file" name="file" id="up" style="display:none" value="browse">
                                        @*<button type="button" value="Upload" class="btn btn-warning" id="upload"><span class="">Upload</span></button>*@
                                        <button class="mu-readmore-btn" type="button" id="upload">
                                            @*<i class="ace-icon fa fa-search"></i>*@
                                            Upload
                                        </button>
                                        <button class="mu-readmore-btn" type="button" id="remove">
                                            @*<i class="ace-icon fa fa-trash-o"></i>*@
                                            Remove
                                            
                                        </button>
                                    </div>

                                </div>                               
                                
                                <div class="col-md-12">
                                    <button type="button" class="mu-readmore-btn">Search</button><button type="submit" class="mu-readmore-btn">Make Menu</button>
                                </div>
                                
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    $(function () {
        $('#upload').click(function () {
            Upload()
        });
        $('#remove').click(function () {
            Remove();
        });
    })
    function Upload() {
        $('#up').trigger('click', $('input[type=file]').change(function () {
            $("#IMG").fadeIn("fast").attr('src', '')
            $("#IMG").fadeIn("fast").attr('src', URL.createObjectURL(event.target.files[0]))

        }))
    }
    function Remove() {
        $("#IMG").fadeIn("fast").attr('src', '')
    }
</script>